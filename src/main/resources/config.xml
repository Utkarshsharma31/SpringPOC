<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="springpoc1.Student" name="student">
        <property name="StudentID">
            <value>11</value>
        </property>
        <property name="StudentName">
            <value>Utkarsh</value>
        </property>
        <property name="StudentAddress">
            <value>Duhai</value>
        </property>

    </bean>

<!-- Value as a Attribute-->
    <bean class="springpoc1.Student" name="student2">
        <property name="studentID" value="12"/>
        <property name="studentName" value="Aakarsh"/>
        <property name="studentAddress" value="Duhai"/>
    </bean>

<!-- using P Schema   -->
    <bean class="springpoc1.Student" name="student3" p:studentID="13" p:studentName="Shivam" p:studentAddress="Duhai" />


</beans>